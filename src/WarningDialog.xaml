<Window x:Class="MessageBox.WarningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warning"
        Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Border Margin="10" CornerRadius="12" BorderThickness="0"
            Padding="0" Background="#FFE53935">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="Black" Opacity="0.7"/>
        </Border.Effect>
        <Grid>
            <!-- Close button (top right X) -->
            <Button x:Name="btnClose"
                    Width="32" Height="32"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,4,4,0"
                    Background="Transparent"
                    BorderBrush="{x:Null}" BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Close">
                <TextBlock Text="âœ•" FontSize="16" Foreground="White" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <StackPanel VerticalAlignment="Center" Margin="0,28,0,0">
                <!-- Title -->
                <TextBlock x:Name="TitleText"
                           Text="WARNING"
                           FontSize="32"
                           FontFamily="pack://application:,,,/MessageBox;component/res/fonts/#62DRAGZ"
                           Foreground="#FFFFEB3B" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,14"/>
                <!-- Message Section -->
                <Border CornerRadius="8" Margin="30,0,30,0"
                        Background="#FFFF8888"  BorderBrush="#FFFFB4B4" BorderThickness="1">
                    <TextBlock x:Name="MessageText"
                               Text="Message goes here"
                               FontSize="18"
                               FontFamily="pack://application:,,,/MessageBox;component/res/fonts/LCDWinTT/#LCD"

                               Foreground="White"
                               TextAlignment="Center"
                               Margin="14,8"
                               TextWrapping="Wrap"/>
                </Border>
                <!-- OK button -->
                <Button x:Name="btnOk"
                        Width="100" Height="32" Content="OK"
                        Background="#FFB71C1C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="{x:Null}" BorderThickness="0"
                        Cursor="Hand"
                        FontFamily="pack://application:,,,/res/fonts/LCDWinTT\#LCD"
                        HorizontalAlignment="Center"
                        Margin="0,18,0,0"
                        Click="OK_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
